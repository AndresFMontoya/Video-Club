.SponsorsSection
  text-align center
  margin auto
  background #fff
  width 80%


.Sponsors-containerTitle
  background white


.Sponsors-title
  text-transform uppercase
  font-size 30px


.Sponsors
  padding-top 4em


.Sponsors-section1, .Sponsors-section2, .Sponsors-section3, .Sponsors-section4
