/*--- FERRETERIAS ---*/


/*SECCION FERRETERIAS*/

.IronmongerySection
  text-align center
  background-image url('../../assets/Iron-mongery/13.jpg')
  background-attachment fixed
  background-size cover
  z-index 1
  background-position 50% 50%
  /*width 1550px*/
  margin auto


.Ironmongery-description
  margin-right auto
  margin-left auto
  width 80%


.Ironmongery-containerTitle
  background white


.Ironmongery-title
  text-transform uppercase
  font-size 30px


.Ironmongery-sectionContainer
  background-color rgba(238, 238, 238, 0.45)
  padding-bottom 5em


.Ironmongery-section1, .Ironmongery-section2, .Ironmongery-section3, .Ironmongery-section4
  display inline-block
  margin-top 3em
  z-index 2


.Ironmongery-image
  height 200px
  width 195px
  border-radius 10px



