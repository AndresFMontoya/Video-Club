@media screen and (max-width: 400px) {
  .WorkerProfile-section1, .WorkerProfile-section2, .WorkerProfile-section3, .WorkerProfile-section4, .WorkerProfile-section5, .WorkerProfile-section6 {
    width: 70%;
    margin: 0;
  }
  .WorkerProfile-image {
    height: 200px;
    width: 200px;
  }
}

@media screen and (max-width: 718px) {
  .WorkerProfile-section1, .WorkerProfile-section2, .WorkerProfile-section3, .WorkerProfile-section4, .WorkerProfile-section5, .WorkerProfile-section6 {
    width: 35%;
    margin: 25px;
  }
  .WorkerProfile-image {
    height: 200px;
    width: 200px;
  }
}

@media screen and (max-width: 600px) {
  .WorkerProfile-section1, .WorkerProfile-section2, .WorkerProfile-section3, .WorkerProfile-section4, .WorkerProfile-section5, .WorkerProfile-section6 {
    margin: 24px;
    width: auto;
  }
  .WorkerProfile-image {
    height: 185px;
    width: 185px;
  }
}

