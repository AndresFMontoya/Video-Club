
.Proeba
    width 100%
    height 100%
    text-align center

.AboutUs-sectionAll
    background #fff

.AboutUs-section
    width 75%
    margin auto

.AboutUs-top
    border-bottom 3px solid #e6e6e6
    background #fff
    width 75%
    margin auto
    text-align center

.AboutIcon
    font-size 60px
    color lightseagreen
    display inline-block
    padding 20px 0

.AboutUs-title
    font-size 25px
    text-transform uppercase
    padding-bottom 10px

.AboutUs-image
    width 125px
    padding 25px 0

.AboutUs-title2
    color rgb(255, 88, 0)

.About-text1
    text-align center
    width 70%
    margin auto
    text-align justify
    margin-top 2em
    line-height 30px

.AboutUs-mision
    text-align center
    padding 75px 0

.AboutUs-misionContainer
    width 50%
    text-align left
    line-height 35px
    display inline-block

.Image-mision
    width 250px
    height 250px

.MisionIcon1, .MisionIcon2
    display inline-block
    font-size 35px
    color #0077E0

.Misiontitle
    display inline-block
    font-size 30px
    color #FF5800

.Image-misionQuery
    display none

.AboutUs-vision
    text-align center
    padding 3em

.AboutUs-visionContainer
    width 50%
    text-align right
    line-height 35px
    display inline-block

.Image-vision
    width 250px
    height 250px
    position relative
    right 35px

.VisionIcon1, .VisionIcon2
    display inline-block
    font-size 35px
    color #0077E0

.Visiontitle
    display inline-block
    font-size 30px
    color #FF5800

@media screen and (max-width: 800px)
  .AboutUs-section, .AboutUs-top
    width 100%
  .About-text1
    width 80%
  .Image-mision
    display none
  .AboutUs-mision, .AboutUs-vision
    height initial
    border none
    padding 15px 0
  .Image-misionQuery, .Image-vision
    display block
    width 150px
    height initial
    margin auto
    padding 35px 0
    position initial
  .AboutUs-misionContainer, .AboutUs-visionContainer
    width 80%
    display block
    margin auto
    border 0px
    text-align center
  .About-text2, .About-text3
    text-align justify
    margin-top 1.5em
