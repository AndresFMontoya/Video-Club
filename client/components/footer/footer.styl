.Footer
    background-image url('../../static/Images/main/azul2.jpg')
    text-align center

.FooterMain
    margin 0
    color white
    display inline-block
    width 30%

a
    text-decoration none

.Footer-twitter, .Footer-facebook, .Footer-instagram, .Footer-youtube
    border-radius 60%
    color #1e3d70
    font-size 30px
    background white

.Footer-twitter
    padding 10px

.Footer-facebook
    padding 10px 15.5px

.Footer-instagram
    padding 10px 11.4px

.Footer-youtube
    padding 10px

.fa-check
    margin-left 0.25em
    color silver
    font-size 20px

.Footer-contacts
    text-align center
    display inline-block
    width 30%

.Phone-contact
    margin-right 0.25em
    color green
    font-size 20px

.TextEmail
    display inline-block
    color white !important

.Email-contact
    margin-right 0.25em
    color red
    font-size 20px

.Home-contact
    margin-right 0.25em
    color #5858FA
    font-size 20px



.Contacts
    text-align center
    font-weight bold
    font-size 15px
    padding 0.5em
    color white

.Direction
    font-size 15px
    text-align center
    margin-left 0.5em

.Footer-networks-title
    text-align center
    display block
    font-size 20px
    padding 6px 0 1em

.Footer-networks
    text-align center
    top 1em
    text-decoration none
    margin 0
    padding 1em

.LinkNetworks
    font-size 35px
    text-align center
    margin 6px
    z-index 0
    color #FF7C01
    :hover
        transform scale(1.1)

.Footer-description
    display inline-block
    color white

.Text-end
    color #FF7C01
    display inline-block
    margin-left 3px

.Footer-end
    margin 0
    text-align center
    font-size 12px
    padding 3em 0 1em
    position relative

.FooterAmbiental
    text-align center
    color white
    display inline-block
    width 30%
    vertical-align middle

.FooterAmbiental-title
    
    font-size 16px
    text-transform capitalize


.Ambiental-logo
    font-size 55px
    border-radius 22%
    border 1px solid
    padding 11px 7px 0
    background white
    color darkgreen
    display block

    width 69px
    margin 0 auto 20px auto

.FooterAmbiental-link
    color greenyellow
    text-transform uppercase

@media screen and (max-width: 800px)
    .FooterAmbiental
        text-align center
        color white
        width 100%
    .Footer-contacts
        width 100%
    .FooterMain
        margin 0
        color white
        width 100%
